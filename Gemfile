source 'https://rubygems.org'

puppetversion = ENV.key?('PUPPET_VERSION') ? "= #{ENV['PUPPET_VERSION']}" : ['< 4.3.0', '>= 3.3']
gem 'puppet', puppetversion
gem 'puppetlabs_spec_helper', '>= 0.1.0'
gem 'puppet-lint', '< 2.0.0', '>= 0.3.2'
gem 'facter', '>= 1.7.0'
gem 'rspec'
gem 'rspec-puppet'
gem 'rspec-puppet-facts'
